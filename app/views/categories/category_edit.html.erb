<%= form_with(url: "/categories/#{category.id}", method: "put", class: "update-menu-form") do %>
  <%= text_field_tag(:name, nil, class: "form-input", value: category.name, placeholder: "Enter new category-name", autofocus: "autofocus") %>
  <%= submit_tag("Update!", class: "form-submit", data: {disable_with: "Updating.."}) %>
<% end %>
